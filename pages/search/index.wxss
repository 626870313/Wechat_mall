page {
  padding-top: 20rpx;
  background-color: #F9F9F9;
}
.search_row {
  height: 50rpx;
  display: flex;
}
.search_row input {
  flex: 1;
  background-color: #FFFFFF;
  height: 100%;
  padding-left: 30rpx;
}
.search_row button {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 110rpx !important;
  font-size: 26rpx;
  padding: 0;
  margin: 0 10rpx;
}
.search_content {
  margin-top: 15rpx;
  padding: 0px;
}
.search_content .search_item {
  border-bottom: 1rpx solid #EAEAEA;
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
